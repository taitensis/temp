---
import '@/styles/global.css';
import type { Language } from '@/lib/types';
import { useTranslations } from '@/lib/i18n';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

interface Props {
  title: string;
  description?: string | null;
  lang?: Language;
  image?: string;
  noIndex?: boolean;
}

const { 
  title, 
  description, 
  lang = 'en',
  image,
  noIndex = false,
} = Astro.props;

const t = useTranslations(lang);

// Use site name from translations or fallback
const siteName = t.site?.name || 'My Favorite Recipes';
const fullTitle = `${title} | ${siteName}`;
const metaDescription = description || t.site?.tagline || 'Discover delicious homemade recipes';

// Canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Default OG image
const ogImage = image || `${Astro.site}og-image.jpg`;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    
    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={metaDescription}>
    <link rel="canonical" href={canonicalURL}>
    {noIndex && <meta name="robots" content="noindex, nofollow">}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={fullTitle}>
    <meta property="og:description" content={metaDescription}>
    <meta property="og:image" content={ogImage}>
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={canonicalURL}>
    <meta property="twitter:title" content={fullTitle}>
    <meta property="twitter:description" content={metaDescription}>
    <meta property="twitter:image" content={ogImage}>
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    
    <!-- Fonts (optional - uncomment if needed) -->
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"> -->
  </head>

  <body class="min-h-screen bg-background font-sans antialiased flex flex-col">
    
    <Header lang={lang} />

    <main class="container mx-auto px-4 py-8 flex-grow">
      <slot />
    </main>

    <Footer lang={lang} />
  </body>
</html>